modules = ["web", "nodejs-20"]

[nix]
channel = "stable-25_05"

[agent]
expertMode = true
integrations = ["replitmail:1.0.0"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Node.js Server"

[[workflows.workflow]]
name = "Node.js Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server.js"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 43171
externalPort = 3000

[[ports]]
localPort = 44645
externalPort = 3001

[deployment]
deploymentTarget = "autoscale"
run = ["python", "-m", "http.server", "5000", "--bind", "0.0.0.0"]
